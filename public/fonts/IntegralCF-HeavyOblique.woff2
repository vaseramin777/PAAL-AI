# This is a Python code block

# Importing necessary libraries
import sys  # For command line arguments
import os  # For file operations

# Defining a function to reverse words in a sentence
def reverse_words(sentence):
    # Splitting the sentence into words
    words = sentence.split()
    
    # Reversing the order of words
    reversed_words = words[::-1]
    
    # Joining the words to form a sentence
    reversed_sentence = ' '.join(reversed_words)
    
    # Returning the reversed sentence
    return reversed_sentence

# Checking if command line arguments are provided
if len(sys.argv) > 1:
    # Getting the filename from command line arguments
    filename = sys.argv[1]
    
    # Checking if the file exists
    if os.path.isfile(filename):
        # Checking if the file can be opened in read mode
        try:
            with open(filename, 'r') as file:
                # Reading the content of the file
                content = file.read()
                
                # Calling the function to reverse words
                reversed_content = reverse_words(content)
                
                # Printing the reversed content
                print(reversed_content)
        except Exception as e:
            # Printing an error message if there's an issue while opening the file
            print(f"Error: {e}")
    else:
        # Printing an error message if the file does not exist
        print(f"The file '{filename}' does not exist.")
else:
    # Printing usage instructions if command line arguments are not provided
    print("Usage: python script.py <filename>")
